<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>FamilyMonitoringServer</display-name>

    <listener>
        <listener-class>com.family.server.config.StartupListener</listener-class>
    </listener>
    <filter>
        <filter-name>CorsFilter</filter-name>
        <filter-class>com.family.server.security.CorsFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>CorsFilter</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>
<!--     Filter JWT (bá» qua auth cho /api/auth/*)-->
    <filter>
        <filter-name>JwtAuthFilter</filter-name>
        <filter-class>com.family.server.security.JwtAuthFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>JwtAuthFilter</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>

    <!-- AuthServlet -->
    <servlet>
        <servlet-name>AuthServlet</servlet-name>
        <servlet-class>com.family.server.api.AuthServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/api/auth/*</url-pattern>
    </servlet-mapping>

    <!-- DeviceServlet -->
    <servlet>
        <servlet-name>DeviceServlet</servlet-name>
        <servlet-class>com.family.server.api.DeviceServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeviceServlet</servlet-name>
        <url-pattern>/api/devices/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TestServlet</servlet-name>
        <servlet-class>com.family.server.api.TestServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TestServlet</servlet-name>
        <url-pattern>/test/*</url-pattern>
    </servlet-mapping>

</web-app>
